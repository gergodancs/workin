<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet author="dancs.gergely" id="wrk-002">

        <createTable tableName="users_data">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_data"/>
            </column>
            <column name="location" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="date_of_birth" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="work_experience" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="education" type="varchar(16)">
                <constraints nullable="false"/>
            </column>
            <column name="start_working" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet author="dancs.gergely" id="wrk-002-1">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="users_data"
                                 constraintName="fk_users_data_user_id" referencedColumnNames="id"
                                 referencedTableName="users_base"/>
    </changeSet>
</databaseChangeLog>
