<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.10.xsd">

    <changeSet id="wrk-008-1" author="dancs.gergely">
        <createTable tableName="profession">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="specialization_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet author="dancs.gergely" id="wrk-008-2">
        <addForeignKeyConstraint baseColumnNames="specialization_id" baseTableName="profession"
                                 constraintName="fk_profession_specialization_id" referencedColumnNames="id"
                                 referencedTableName="specialization"/>
    </changeSet>

</databaseChangeLog>
