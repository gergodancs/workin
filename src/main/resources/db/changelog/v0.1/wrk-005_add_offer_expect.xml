<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet author="dancs.gergely" id="wrk-005-1">

        <createTable tableName="company_offer_expect">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_offer_expect"/>
            </column>
            <column name="start_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="work_experience" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="education" type="varchar(16)">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="company_offer_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="min_salary" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="company_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet author="dancs.gergely" id="wrk-005-2">
        <addForeignKeyConstraint baseColumnNames="company_offer_id" baseTableName="company_offer_expect"
                                 constraintName="fk_company_offer_expect_id" referencedColumnNames="id"
                                 referencedTableName="company_offer"/>
    </changeSet>

    <changeSet author="dancs.gergely" id="wrk-005-3">
        <addForeignKeyConstraint baseColumnNames="company_id" baseTableName="company_offer_expect"
                                 constraintName="fk_company_expect_id" referencedColumnNames="id"
                                 referencedTableName="company_base"/>
    </changeSet>
</databaseChangeLog>
