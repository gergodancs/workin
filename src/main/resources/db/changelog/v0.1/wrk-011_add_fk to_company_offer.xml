<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="wrk-011-1" author="dancs.gergely">
        <dropColumn tableName="company_offer" columnName="specialization"/>
        <dropColumn tableName="company_offer" columnName="profession"/>
    </changeSet>

    <changeSet id="work-011-2" author="dancs.gergely">
        <addColumn tableName="company_offer">
            <column name="specialization_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="work-011-3" author="dancs.gergely">
        <addColumn tableName="company_offer">
            <column name="profession_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>


    <changeSet author="dancs.gergely" id="wrk-011-4">
        <addForeignKeyConstraint baseColumnNames="specialization_id" baseTableName="company_offer"
                                 constraintName="fk_specialization_company_offer" referencedColumnNames="id"
                                 referencedTableName="specialization"/>
    </changeSet>

    <changeSet author="dancs.gergely" id="wrk-012-5">
        <addForeignKeyConstraint baseColumnNames="profession_id" baseTableName="company_offer"
                                 constraintName="fk_profession_company_offer" referencedColumnNames="id"
                                 referencedTableName="profession"/>
    </changeSet>


</databaseChangeLog>
