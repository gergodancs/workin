<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet author="dancs.gergely" id="wrk-003">

        <createTable tableName="company_base">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_company"/>
            </column>
            <column name="company_name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(16)">
                <constraints nullable="false"/>
            </column>
            <column name="taxNumber" type="varchar(16)">
                <constraints nullable="false"/>
            </column>
            <column name="registrationNumber" type="varchar(16)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>